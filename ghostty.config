# theme and fonts
font-family = "FiraCode Nerd Font Mono"
font-size = 14
theme = catppuccin-mocha

# still unwanted blinking in R inside neovim
cursor-style = block
cursor-style-blink = false
selection-invert-fg-bg = true
cursor-color = f1e0dc
cursor-text = 1e1d2c
shell-integration = zsh
shell-integration-features = no-cursor

# hot-key to open/focus quick terminal
#keybind = global:f12=toggle_quick_terminal
keybind = global:f12=toggle_visibility

# tabs is the least ugly option
macos-titlebar-style = tabs
window-height = 49
window-width = 167

# remap left option key as Alt
macos-option-as-alt = left
keybind = alt+left=unbind
keybind = alt+right=unbind

# set to clipboard rather than true
copy-on-select = clipboard

mouse-hide-while-typing = true
